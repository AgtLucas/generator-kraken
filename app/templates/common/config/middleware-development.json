{
    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": "kraken-devtools",
            "arguments": [
                "path:./public",
                "path:./.build",
                {
                    <% if (templateModule) { %>
                    "dust": {
                        "module": "kraken-devtools/plugins/dust",
                        "files": "/templates/**/*.js",
                        "base": "templates"
                    },
                    <% } %>
                    <% if (cssModule) { %>
                    "less": {
                        "module": "kraken-devtools/plugins/<%= cssModule %>",
                        "files": "/css/**/*.css"
                    },
                    <% } %>
                    "copier": {
                        "module": "kraken-devtools/plugins/copier",
                        "files": "**/*"
                    }
                }
            ]
        }

    }
}