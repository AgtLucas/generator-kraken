{
    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": "kraken-devtools",
            "arguments": [
                "path:./public",
                "path:./.build",
                {   <% if (templateModule) { %>
                    "template": {
                        "module": "kraken-devtools/plugins/<%= templateModule %>",
                        "files": "/templates/**/*.js",
                        "base": "templates"
                    },<% } %><% if (cssModule) { %>
                    "css": {
                        "module": "kraken-devtools/plugins/<%= cssModule %>",
                        "files": "/css/**/*.css"
                    },<% } %>
                    "copier": {
                        "module": "kraken-devtools/plugins/copier",
                        "files": "**/*"
                    }
                }
            ]
        }

    }
}