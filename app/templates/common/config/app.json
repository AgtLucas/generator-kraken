{

    <% if (templateModule) { %>
    "express": {
        "view engine": "js",
        "view cache": false,
        "views": "path:./.build/templates"
    },

    "view engines": {
        "js": {
            "module": "engine-munger",
            "renderer": {
                "method": "js",
                "arguments": [{ "cache": false }]
            }
        }
    },
    <% } %>

    <% if (i18n) { %>
    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "en-US"
    }
    <% } %>

}